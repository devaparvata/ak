def reverse_hex_file(input_file, output_file):
    try:
        # Read the contents of the input file
        with open(input_file, 'rb') as f:
            data = f.read()
        
        # Convert the data to hexadecimal
        hex_data = data.hex()
        
        # Reverse the hexadecimal string
        reversed_hex_data = hex_data[::-1]
        
        # Reverse the reversed hexadecimal data back to original
        original_hex_data = reversed_hex_data[::-1]
        
        # Convert the original hexadecimal data back to bytes
        original_data = bytes.fromhex(original_hex_data)
        
        # Write the original data to the output file
        with open(output_file, 'wb') as f:
            f.write(original_data)
        
        print("Data reversed and written to", output_file)
    
    except FileNotFoundError:
        print("File not found.")
    except Exception as e:
        print("An error occurred:", e)

# Example usage:
input_file = 'input.txt'  # Replace 'input.txt' with the name of your input file
output_file = 'reversed.txt'  # Output file name
reverse_hex_file(input_file, output_file)


def get_choice():
    options = ["Option 1", "Option 2"]
    print("Choose one of the following options:")
    for i, option in enumerate(options, 1):
        print(f"{i}. {option}")
    
    while True:
        choice = input("Enter your choice (1 or 2): ")
        if choice in ['1', '2']:
            return options[int(choice) - 1]
        else:
            print("Invalid choice. Please enter 1 or 2.")

# Example usage:
chosen_option = get_choice()
print("You chose:", chosen_option)

